    block link
      -var selected = 'Home'; //default
    
    -var menu = { 'Home': 'index.html', 'Portfolio': 'portfolio.html', 'Testimonials': 'testimonials.html', 'Resume': 'resume.html', 'Contact': 'contact.html' };

    nav.navbar.navbar-default.navbar-fixed-top
      .navbar-header
        button.navbar-toggle.collapsed(data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false")
          span.sr-only Toggle Navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand Joshua Briley
      .collapse.navbar-collapse(id="bs-example-navbar-collapse-1")
        ul.nav.navbar-nav
          each val, key in menu
            if selected === key
              li.active
                a(href=val, title=key)= key
            else
              li
                a(href=val, title=key)= key

    .container.primary-container

      block content

